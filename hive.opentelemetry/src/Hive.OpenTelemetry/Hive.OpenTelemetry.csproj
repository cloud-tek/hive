<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>true</IsPackable>
        <RepositoryUrl>https://github.com/cloud-tek/hive</RepositoryUrl>
        <PackageId>Hive.OpenTelemetry</PackageId>
        <PackageDescription>OpenTelemetry integration for Hive microservices</PackageDescription>
        <Authors>cloud-tek</Authors>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Hive.OpenTelemetry.Tests" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\..\hive.core\src\Hive.Abstractions\Hive.Abstractions.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="FluentValidation" />
      <PackageReference Include="OpenTelemetry.Exporter.Console" />
      <PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" />
      <PackageReference Include="OpenTelemetry.Extensions.Hosting" />
      <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" />
      <PackageReference Include="OpenTelemetry.Instrumentation.Http" />
      <PackageReference Include="OpenTelemetry.Instrumentation.Runtime" />
    </ItemGroup>

    <Import Project="$(MSBuildThisFileDirectory)..\..\..\Version.targets" />

</Project>
